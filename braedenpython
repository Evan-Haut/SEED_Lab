import numpy as np
import cv2 as cv
from smbus2 import SMBus
from threading import Thread
import time

# Constants for camera calibration and ArUco detection
mtx = np.array([[567.72602969, 0, 313.44143064],
                [0, 567.16356923, 233.64730096],
                [0, 0, 1]])
dist = np.array([0.26660512, -0.86434186, -0.00534246, 0.01027815, 1.58472904])
marker_size = 0.1  # Update this with the actual marker size in meters

# I2C communication
i2c = SMBus(1)
arduino_address = 8
stop_message_sent = False  # State variable to track if the stop message has been sent

# Function to send a message to the Arduino
def send_message(message_type, value=None):
    message_str = 'D' if message_type == 'detect' else f'A{value}'
    message_bytes = [ord(char) for char in message_str] + [ord('\n')]
    i2c.write_i2c_block_data(arduino_address, 0, message_bytes)
    print(f"Sent: {'Stop signal' if message_type == 'detect' else f'Angle: {value}'}")

# Function to calculate the angle
def calculate_angle(marker_center, image_center, distance):
    vector_to_marker = marker_center - image_center
    angle = np.arctan2(vector_to_marker, distance) * (180 / np.pi)
    return float(angle)

# Function to detect ArUco marker and send messages
def detect_aruco_marker():
    global stop_message_sent
    cap = cv.VideoCapture(0)

    # Check if the camera opened successfully
    if not cap.isOpened():
        print("Error: Camera could not be opened.")
        return

    # Define ArUco dictionary and parameters
    aruco_dict = cv.aruco.getPredefinedDictionary(cv.aruco.DICT_6X6_50)
    parameters = cv.aruco.DetectorParameters()

    try:
        while True:
            ret, frame = cap.read()
            if not ret:
                print("Error: Can't receive frame (stream end?). Exiting ...")
                break

            # Convert to grayscale for detection
            gray = cv.cvtColor(frame, cv.COLOR_BGR2GRAY)
            corners, ids, _ = cv.aruco.detectMarkers(gray, aruco_dict, parameters)

            if ids is not None and not stop_message_sent:
                # Detected the marker for the first time
                print("ArUco marker detected! Sending stop signal.")
                send_message('detect')
                stop_message_sent = True  # Set the flag to True after sending stop message

            elif ids is not None and stop_message_sent:
                # Detected the marker and already sent the stop signal
                rvec, tvec, _ = cv.aruco.estimatePoseSingleMarkers(corners, marker_size, mtx, dist)
                if tvec is not None and len(tvec) > 0:
                    # Calculate the angle and send it
                    xsum = np.sum(corners[0][0][:, 0])
                    marker_center_x = xsum / 4
                    center_x = frame.shape[1] // 2
                    angle = calculate_angle(marker_center_x, center_x, tvec[0][0][2])
                    print(f"ArUco marker detected at angle: {angle}. Sending angle.")
                    send_message('angle', angle)
                    break  # Exit after sending the angle

            cv.imshow("Frame", frame)

            # Break the loop if 'q' is pressed
            if cv.waitKey(1) & 0xFF == ord('q'):
                print("Quitting...")
                break
    finally:
        # When everything is done, release the capture and destroy windows
        cap.release()
        cv.destroyAllWindows()

# Main thread to start ArUco detection
thread = Thread(target=detect_aruco_marker, daemon=True)
thread.start()
thread.join()
